label
    - if (model.value == "true")
        input(id="settings-#{model.paramId}",
            name="#{model.paramId}",
            type="checkbox",
            checked="checked",
            value="#{model.value}")
    - else
        input(id="settings-#{model.paramId}",
            name="#{model.paramId}",
            type="checkbox",
            value="#{model.value}")
    | #{t("panelSettings " + model.paramId)}
