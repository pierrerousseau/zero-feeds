            ul#menu-tabs-nav(class="nav nav-tabs", role="tablist")
                li#menu-tabs-welcome(class="hidden-xs", role="presentation") 
                    a(href="#panel-welcome")
                li#menu-tabs-links(role="presentation") 
                    a(class="menu-button",
                      href="#panel-links", 
                      aria-controls="links", 
                      role="tab", 
                      data-toggle="tab") 
                        span(class="glyphicon glyphicon-home")
                        |Â Links
                li#menu-tabs-history(role="presentation") 
                    a(class="menu-button",
                      href="#panel-history", 
                      aria-controls="history", 
                      role="tab", 
                      data-toggle="tab") 
                        span(class="glyphicon glyphicon-time")
                        | History
                li#menu-tabs-add-feeds(role="presentation") 
                    a(class="menu-button",
                      href="#panel-add-feeds", 
                      aria-controls="add-feeds", 
                      role="tab", 
                      data-toggle="tab") 
                        span(class="glyphicon glyphicon-plus")
                        | Add Feeds
                li#menu-tabs-import-export(role="presentation") 
                    a(class="menu-button",
                      href="#panel-import-export", 
                      aria-controls="import-export", 
                      role="tab", 
                      data-toggle="tab") 
                        span(class="glyphicon glyphicon-transfer")
                        | Import/Export
                li#menu-tabs-settings(role="presentation") 
                    a(class="menu-button",
                      href="#panel-settings", 
                      aria-controls="settings", 
                      role="tab", 
                      data-toggle="tab") 
                        span(class="glyphicon glyphicon-cog")
                        | Settings
                li#menu-tabs-help(class="navbar-right", role="presentation") 
                    a(class="menu-button",
                      href="#panel-help", 
                      aria-controls="help", 
                      role="tab", 
                      data-toggle="tab") 
                        span(class="glyphicon glyphicon-question-sign")
                        | Help

